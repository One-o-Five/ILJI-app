{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "./app/**/*.ts",
    "./app/**/*.tsx",
    "./app/(tabs)/**/*.ts",
    "./app/(tabs)/**/*.tsx",
    "./components/**/*.ts",
    "./components/**/*.tsx",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./hooks/**/*.ts",
    "./hooks/**/*.tsx",
    "./expo-env.d.ts",
    "./.expo/types/**/*.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
